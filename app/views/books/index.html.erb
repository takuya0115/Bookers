<!DOCTIPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
  </head>

  <body>
  <h1>Books</h1>
  <% @books.each do |book| %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><a href="/books/<%= book.id %>">Show</a></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>

      </tr>
    </tbody>
  </table>
  <% end %>
  <h2>New book</h2>
  <%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  <% end %>
  </body>
</html>
